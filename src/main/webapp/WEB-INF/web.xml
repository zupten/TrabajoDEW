<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <welcome-file-list>
    <welcome-file>bienvenida</welcome-file>
  </welcome-file-list>
  
  
  <servlet>
    <servlet-name>Identificacion</servlet-name>
    <servlet-class>paginas.Identificacion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Identificacion</servlet-name>
    <url-pattern>/identificacion</url-pattern>
  </servlet-mapping>
  
  <security-role>
    <role-name>alumno</role-name>
  </security-role>
  <security-role>
    <role-name>profesor</role-name>
  </security-role>
  
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>Trabajo</realm-name>
    <form-login-config>
      <form-login-page>/login.html</form-login-page>
      <form-error-page>/errorLogin.jsp</form-error-page>
    </form-login-config>
  </login-config>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>PaginaAutorizada</web-resource-name>
      <url-pattern>/identificacion</url-pattern>
      <url-pattern>/asignaturasAlumno.jsp</url-pattern>
      <url-pattern>/alumno/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>alumno</role-name>
      <role-name>profesor</role-name>
    </auth-constraint>
  </security-constraint>
   
  
</web-app>
